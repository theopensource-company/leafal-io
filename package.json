{
  "name": "leafal-io",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"leafal,surrl\" --hide 1 \"pnpm run dev-run-next\" \"pnpm run dev-run-surreal\"",
    "debug": "concurrently --names \"leafal,surrl\" \"pnpm run dev-run-next\" \"pnpm run dev-run-surreal\"",
    "dbonly": "concurrently --names \"leafal,surrl\" --hide 0 \"pnpm run dev-run-next\" \"pnpm run dev-run-surreal\"",
    "dev-run-next": "cross-env NODE_ENV=\"development\" next dev --port 14000",
    "dev-run-surreal": "surreal start --log debug --user root --pass root --bind 0.0.0.0:14001 file:dev.db",
    "dev-migrate": "ts-node ./scripts/migratedefaults.ts",
    "ts": "tsc --watch",
    "lint": "eslint . --ext ts --ext tsx --max-warnings 0",
    "deploy": "export NODE_ENV=\"production\" SURREAL_DATABASE=leafal-deployment_$VERCEL_GIT_COMMIT_REF && export NEXT_PUBLIC_SURREAL_DATABASE=$SURREAL_DATABASE && ts-node ./scripts/predeploy.ts && pnpm build",
    "build": "next build"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.7",
    "@theopensource-company/surrealdb-cloudflare": "^1.0.4",
    "@types/express": "^4.17.17",
    "@types/node": "20.1.7",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "class-variance-authority": "^0.6.0",
    "concurrently": "^8.0.1",
    "eslint": "8.40.0",
    "eslint-config-next": "13.4.2",
    "express": "^4.18.2",
    "next": "13.4.2",
    "node-fetch": "^3.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-feather": "^2.0.10",
    "react-hook-form": "^7.44.2",
    "react-markdown": "^8.0.7",
    "sass": "^1.62.1",
    "surrealdb.js": "^0.7.3",
    "typescript": "5.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "bufferutil": "^4.0.7",
    "cross-env": "^7.0.3",
    "eslint-config-next": "13.4.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.12",
    "eslint-plugin-unused-imports": "^2.0.0",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-node": "^10.9.1",
    "utf-8-validate": "^6.0.3"
  },
  "peerDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^6.0.3"
  }
}
