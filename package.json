{
  "name": "leafal-io",
  "scripts": {
    "dev": "concurrently --names \"leafal,surrl\" --hide 1 \"pnpm run dev-run-solid\" \"pnpm run dev-run-surreal\"",
    "debug": "concurrently --names \"leafal,surrl\" \"pnpm run dev-run-solid\" \"pnpm run dev-run-surreal\"",
    "dev-run-solid": "solid-start dev --port 14000",
    "dev-run-surreal": "surreal start --log debug --user root --pass root --bind 0.0.0.0:14001 file:dev.db",
    "deploy": "export NEXT_PUBLIC_DEPLOYMENT_STATUS=\"deployed\" SURREAL_DATABASE=leafal-deployment_$CF_PAGES_BRANCH && export NEXT_PUBLIC_SURREAL_NAMESPACE=$SURREAL_NAMESPACE && node ./cli/predeploy.mjs && pnpm build",
    "build": "solid-start build",
    "start": "solid-start start",
    "lint": "eslint . --ext ts --ext tsx --ext js --ext jsx --ext json --ext html --max-warnings 0",
    "ts": "tsc --watch",
    "clean": "rm -rf .solid dist functions node_modules"
  },
  "type": "module",
  "devDependencies": {
    "@theopensource-company/awaited-surrealdb": "^0.5.1",
    "@theopensource-company/surrealdb-cloudflare": "^1.0.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.54",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.11.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "solid-start-cloudflare-pages": "^0.2.23",
    "solid-start-node": "^0.2.19",
    "typescript": "^4.9.4",
    "vite": "^4.1.4"
  },
  "dependencies": {
    "@solidjs/meta": "^0.28.2",
    "@solidjs/router": "^0.7.0",
    "cva": "npm:class-variance-authority@^0.4.0",
    "prettier-plugin-organize-imports": "^3.2.2",
    "solid-js": "^1.6.11",
    "solid-start": "^0.2.23",
    "undici": "^5.15.1"
  },
  "engines": {
    "node": ">=16.8"
  }
}