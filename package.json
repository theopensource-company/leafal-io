{
  "name": "leafal-io",
  "scripts": {
    "dev": "concurrently --names \"leafal,surrl,devkit\" --hide 1 \"pnpm run dev-run-solid\" \"pnpm run dev-run-surreal\" \"pnpm run dev-run-devkit\"",
    "debug": "concurrently --names \"leafal,surrl,devkit\" \"pnpm run dev-run-solid\" \"pnpm run dev-run-surreal\" \"pnpm run dev-run-devkit\"",
    "dev-run-solid": "cross-env VITE_ENV=dev solid-start dev --port 14000",
    "dev-run-devkit": "ts-node scripts/devkit.ts",
    "dev-run-surreal": "surreal start --log debug --user root --pass root --bind 0.0.0.0:14001 file:dev.db",
    "deploy": "export VITE_DEPLOYMENT_STATUS=\"deployed\" SURREAL_DATABASE=leafal-deployment_$CF_PAGES_BRANCH && export VITE_SURREAL_DATABASE=$SURREAL_DATABASE && ts-node ./scripts/predeploy.ts && pnpm build",
    "build": "solid-start build",
    "start": "solid-start start",
    "lint": "eslint . --ext ts --ext tsx --ext js --ext jsx --ext json --ext html --max-warnings 0",
    "ts": "tsc --watch",
    "clean": "rm -rf .solid .devbox .direnv dist functions node_modules"
  },
  "type": "module",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230321.0",
    "@theopensource-company/awaited-surrealdb": "^0.5.1",
    "@theopensource-company/surrealdb-cloudflare": "^1.0.4",
    "@types/express": "^4.17.17",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.14.54",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-only-error": "^1.0.2",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.11.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.1",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "sass": "^1.58.3",
    "solid-start-cloudflare-pages": "^0.2.23",
    "solid-start-node": "^0.2.19",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.1.4",
    "wrangler": "^2.13.0"
  },
  "dependencies": {
    "@solidjs/meta": "^0.28.2",
    "@solidjs/router": "^0.7.0",
    "cva": "npm:class-variance-authority@^0.4.0",
    "prettier-plugin-organize-imports": "^3.2.2",
    "solid-js": "^1.6.11",
    "solid-start": "^0.2.23",
    "surrealdb.js": "^0.5.0",
    "undici": "^5.15.1"
  },
  "engines": {
    "node": ">=16.8"
  },
  "pnpm": {
    "patchedDependencies": {
      "class-variance-authority@0.4.0": "patches/class-variance-authority@0.4.0.patch"
    }
  }
}